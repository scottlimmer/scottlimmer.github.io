:root{--body-bg:#FAFAFA;--body-fg:#444;--link-fg:#0c65d7}body{background:var(--body-bg);color:var(--body-fg);font-family:nunito sans,sans-serif;line-height:1.5;margin:0 auto;max-width:100ch;font-size:1em;padding:1em}body>header{border-bottom:1px dotted #444;margin-bottom:3rem;display:flex;align-items:center;padding-bottom:1em}body>header h1{font-weight:800}body>header nav{flex-grow:1;text-align:right}body>header nav ul{margin:0}body>header nav li{display:inline-block;list-style-type:none;padding-left:1em}body>header nav li a{color:inherit;border:none}body>header nav li a:hover,body>header nav li a.active{border-bottom:2px solid #444;padding-bottom:5px}body>footer{border-top:1px dotted #444;margin-top:3rem}article header{margin-bottom:1.3em}a{color:var(--link-fg);text-decoration:none;border-bottom:1px solid var(--link-fg)}h1,h2,h3,h4,h5,h6{font-family:raleway,sans-serif;font-weight:600}h1{font-size:2.1rem}h2{font-size:1.9rem}h3{font-size:1.7rem}h4{font-size:1.5rem}h5{font-size:1.3rem}h6{font-size:1.1rem}pre{overflow-x:auto}code,pre{font-family:jetbrains mono,monospace;font-size:.95em}code{background:#eee}p code,li code{background:#e8e8e8;color:#444;padding:2px 4px;font-size:.9rem}p img{max-width:100%}.chroma{padding:1.5em;border:solid #e8e8e8;border-width:0 0 2px;line-height:1.6}.chroma code{color:inherit}h1+time,h2+time{margin-top:-1.3em;display:block;font-size:.95em;text-transform:uppercase;color:#666}h2+h3,h3+h4,h4+h5,h5+h6{margin-top:-.3em}blockquote{padding:.5em;margin:0}blockquote p{margin:0}blockquote.success{background:#e6f0df}blockquote.danger{background:#ffdcdc}blockquote.note{background:#dadaff}blockquote.important{background:#d3e4ff}main h1{font-size:2.5em}main li{line-height:1.6}main p,main li,main blockquote{max-width:75ch}main.home h2{font-size:1.4em}main.home a:link,main.home a:visited{border-bottom-color:transparent}main.home a:hover,main.home a:active{border-bottom-color:var(--link-fg)}.post-card{display:grid;column-gap:2em;grid-template-columns:1fr 5fr;margin-bottom:1.5em}.post-card .meta{padding-top:.4em;text-align:right}.post-card .body h2{margin-top:0}.post-card .body h2 a{color:#000}.post-card .body h2 a:hover,.post-card .body h2 a:active{border-bottom-color:#000}@media screen and (max-width:571px){body>header nav li{display:block;margin-bottom:2px}body>header nav li a:hover,body>header nav li a.active{padding-bottom:0}}