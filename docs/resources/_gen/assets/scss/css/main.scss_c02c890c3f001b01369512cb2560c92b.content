body{background:#fffff7;color:#444;font-family:open sans,sans-serif;line-height:1.5;margin:0 auto;max-width:75ch;font-size:1em}header{border-bottom:1px solid #aaa;margin-bottom:1rem;display:flex;align-items:center}header nav{flex-grow:1;text-align:right}header nav li{display:inline-block;list-style-type:none;padding-left:1em}header nav li a{color:inherit;border:none}header nav li a:hover{font-weight:700}footer{border-top:1px solid #222;margin-top:1rem}a{color:#0c65d7;text-decoration:none;border-bottom:1px solid #0c65d7}h1,h2,h3,h4,h5,h6{font-family:lora,serif}pre{overflow-x:auto}code,pre{font-family:source code pro,monospace;font-size:.95em}code{background:#eee}p code,li code{background:0 0;color:#a524cd}.chroma{padding:.5em}h1+time{margin-top:-1.3em;display:block;font-size:.95em;text-transform:uppercase;color:#666}h2+h3,h3+h4,h4+h5,h5+h6{margin-top:-.3em}blockquote{padding:.5em;margin:0}blockquote p{margin:0}blockquote.success{background:#e3ffda}blockquote.danger{background:#ffdcdc}blockquote.note{background:#dadaff}main h1{font-size:2.5em}h2{margin-top:2em}