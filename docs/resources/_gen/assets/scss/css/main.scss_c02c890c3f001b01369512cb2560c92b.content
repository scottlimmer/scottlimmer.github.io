body{color:#444;font-family:open sans,sans-serif;line-height:1.5;margin:0 auto;max-width:75ch;font-size:1.05em}header{border-bottom:1px solid #222;margin-bottom:1rem}footer{border-top:1px solid #222;margin-top:1rem}a{color:#00e;text-decoration:none}h1,h2,h3,h4,h5,h6{font-family:lora,serif}pre{overflow-x:auto}code,pre{font-family:source code pro,monospace;font-size:.9em}code{background:#eee}.chroma{padding:.5em}h2+h3,h3+h4,h4+h5,h5+h6{margin-top:-.3em}blockquote{padding:.5em;margin:0}blockquote p{margin:0}blockquote.success{background:#e3ffda}blockquote.danger{background:#ffdcdc}blockquote.note{background:#dadaff}p code{font-size:inherit}h2{margin-top:2em}