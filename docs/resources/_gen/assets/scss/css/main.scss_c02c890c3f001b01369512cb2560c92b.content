:root{--body-bg:#FAFAFA;--body-fg:#444}body{background:var(--body-bg);color:var(--body-fg);font-family:nunito sans,sans-serif;line-height:1.5;margin:0 auto;max-width:100ch;font-size:1em;padding:1em}body>header{border-bottom:1px dotted #444;margin-bottom:5rem;display:flex;align-items:center}body>header h1{font-weight:800}body>header nav{flex-grow:1;text-align:right}body>header nav li{display:inline-block;list-style-type:none;padding-left:1em}body>header nav li a{color:inherit;border:none}body>header nav li a:hover,body>header nav li a.active{border-bottom:2px solid #444;padding-bottom:5px}body>footer{border-top:1px dotted #444;margin-top:5rem}a{color:#0c65d7;text-decoration:none;border-bottom:1px solid #0c65d7}h1,h2,h3,h4,h5,h6{font-family:raleway,sans-serif;font-weight:600}h1{font-size:2.1rem}h2{font-size:1.9rem}h3{font-size:1.7rem}h4{font-size:1.5rem}h5{font-size:1.3rem}h6{font-size:1.1rem}pre{overflow-x:auto}code,pre{font-family:source code pro,monospace;font-size:.95em}code{background:#eee}p code,li code{background:0 0;color:#771197}.chroma{padding:1.5em;border:solid #e8e8e8;border-width:0 0 2px;line-height:1.6}.chroma code{color:inherit}h1+time{margin-top:-1.3em;display:block;font-size:.95em;text-transform:uppercase;color:#666}h2+h3,h3+h4,h4+h5,h5+h6{margin-top:-.3em}blockquote{padding:.5em;margin:0}blockquote p{margin:0}blockquote.success{background:#e6f0df}blockquote.danger{background:#ffdcdc}blockquote.note{background:#dadaff}main h1{font-size:2.5em}main p,main li{max-width:75ch}main h2{margin-top:2em}